<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="report_purchaseorder_document_av" inherit_id="purchase.report_purchaseorder_document">
		<xpath expr="//table/thead/tr/th[1]" position="before">
			<th>#</th>
			<th>Product Image</th>
		</xpath>
		<xpath expr="//table/thead" position="after">
			 <t t-set="i" t-value="1"/>
		</xpath>
		<xpath expr="//div/table/tbody/t/tr/t/td" position="before">
			<td><span t-esc="i"/></td>
			    <t t-set="i" t-value="i+1"/>
			<td><t t-if="line.product_image"><span t-field="line.product_image" t-options="{'widget': 'image','style':'width: 100px;height: 100px'}" /></t></td>
		</xpath>    
	</template>
</odoo>
