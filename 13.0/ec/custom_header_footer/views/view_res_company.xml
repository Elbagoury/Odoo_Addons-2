<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_company_form_custom" model="ir.ui.view">
            <field name="name">res.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                    <page string="Headers &amp; Footers">
                        <group>
                            <group>
                                <field name="for_all_report"/>
                            </group>
                        </group>
                        <group>
                            <group string="Report Header &amp; Footer One">
                                <field name="report_header_one" filename="name_report_header_one"/>
                                <field name="name_report_header_one" invisible="1"/>
                                <field name="report_footer_one" filename="name_report_footer_one"/>
                                <field name="name_report_footer_one" invisible="1"/>
                            </group>
                            <group string="Report Header &amp; Footer Two">
                                <field name="report_header_two" filename="name_report_header_two"/>
                                <field name="name_report_header_two" invisible="1"/>
                                <field name="report_footer_two" filename="name_report_footer_two"/>
                                <field name="name_report_footer_two" invisible="1"/>
                            </group>
                            <group string="Report Header &amp; Footer Three">
                                <field name="report_header_three" filename="name_report_header_three"/>
                                <field name="name_report_header_three" invisible="1"/>
                                <field name="report_footer_three" filename="name_report_footer_three"/>
                                <field name="name_report_footer_three" invisible="1"/>
                            </group>
                            <group string="Report Header &amp; Footer Four">
                                <field name="report_header_four" filename="name_report_header_four"/>
                                <field name="name_report_header_four" invisible="1"/>
                                <field name="report_footer_four" filename="name_report_footer_four"/>
                                <field name="name_report_footer_four" invisible="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
