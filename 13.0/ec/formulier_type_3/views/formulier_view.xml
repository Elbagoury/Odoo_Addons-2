            <xpath expr="//page[@name='opportunity_question']" position="after">
                <page string="PF Quote" name="solar_quote" attrs="{'invisible': [('customer_type', '!=', 'formulier_three')]}">
                    <group attrs="{'invisible': [('customer_type', '!=', 'formulier_three')]}">
                        <group name="energy_use" string="How much energy You use ?">
                            <field name="energy_use" nolabel="1"/>
                        </group>
                        <group name="location_correction" string="Location Correction">
                            <field name="location_correction" nolabel="1"/>
                        </group>
                        <group name="location_calculation" string="Location Calculations">
                            <field name="location_calculation" nolabel="1"/>
                        </group>
                        <group name="solar_type" string="Solar type">
                            <field name="solar_type" widget="many2many_tags" options="{'no_create_edit': True}" />
                        </group>
                        <group name="solar_product" string="Which solar panel You want ?">
                            <field name="solar_product" nolabel="1" domain="[('product_type', '=', 'Solar Panel')]"/>
                        </group>
                        <group name="solar_watt_piek" string="Solar Energy Watt Piek">
                            <field name="solar_watt_piek" nolabel="1"/>
                        </group>
                        <group name="energy_wat_piek" string="Energy Wat Piek Calclulation">
                            <field name="energy_wat_piek" nolabel="1"/>
                        </group>
                        <group name="need_optimiser" string="Do You need product Optimisers ?">
                            <field name="need_optimiser" nolabel="1"/>
                        </group>
                        <group name="optimiser_product" string="Which optimiser You want ?">
                            <field name="optimiser_product" nolabel="1" domain="[('product_type', '=', 'Optimisers')]" attrs="{'invisible': [('need_optimiser', '!=', 'ja')]}"/>
                        </group>
                        <group name="need_converter" string="Do You need Converter ?">
                            <field name="need_converter" nolabel="1"/>
                        </group>
                        <group name="converter_product" string="Which converter we need ?" attrs="{'invisible': [('need_converter', '!=', 'ja')]}">
                            <field name="converter_product" nolabel="1" domain="['&amp;', ('min_product_range', '&lt;=', energy_use), ('max_product_range', '&gt;=', energy_use), ('product_type', '=', 'Converter')]"/>
                        </group>
                        <group name="pf_select_roof" string="Is it a flat roof or a slanted roof ?">
                            <field name="pf_select_roof" nolabel="1"/>
                        </group>
                        <group name="flat_roof_product" string="Which Flat roof system You want ?" attrs="{'invisible': [('pf_select_roof', 'not in', ['Flat Roof','Mix Roof'])]}">
                            <field name="flat_roof_product" nolabel="1" domain="[('product_type', '=', 'Flat Roof')]"/>
                        </group>
                        <group name="slanted_roof_product" string="Which Slanted roof system You want ?" attrs="{'invisible': [('pf_select_roof', 'not in', ['Slanted Roof','Mix Roof'])]}">
                            <field name="slanted_roof_product" nolabel="1" domain="[('product_type', '=', 'Slanted Roof')]"/>
                        </group>
                        <group name="installation_time" string="How many time needed for installation ?">
                            <field name="installation_time" nolabel="1"/>
                        </group>
                        <group name="stekkers_product" string="Which stekkers You want ?">
                            <field name="stekkers_product" nolabel="1" domain="[('product_type', '=', 'Stekkers')]"/>
                        </group>
                        <group name="remain_material" string="Which Overige Materialen You want ?">
                            <field name="remain_material" nolabel="1" domain="[('product_type', '=', 'Overige Materialen')]"/>
                        </group>
                        <group name="vat_refund_product" string="Which btw teruggave You want ?">
                            <field name="vat_refund_product" nolabel="1" domain="[('product_type', '=', 'BTW teruggave')]"/>
                        </group>
                        <group name="need_discount" string="Do You need Discount ?">
                            <field name="need_discount" nolabel="1"/>
                        </group>
                        <group name="discount_product" string="Select Discount" attrs="{'invisible': [('need_discount', '!=', 'ja')]}">
                            <field name="discount_product" nolabel="1" domain="[('product_type', '=', 'Discount')]"/>
                        </group>
                        <group name="discount_qty" attrs="{'invisible': [('need_discount', '!=', 'ja')]}">
                            <field name="discount_qty"/>
                        </group>
                        <group name="need_discount_2" string="Do You need Discount 2 ?">
                            <field name="need_discount_2" nolabel="1"/>
