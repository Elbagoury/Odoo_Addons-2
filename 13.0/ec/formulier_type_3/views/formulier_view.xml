<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_question_formulier_form" model="ir.ui.view">
        <field name="name">question.formulier.form</field>
        <field name="model">question.formulier</field>
        <field name="inherit_id" ref="quotation_images_feedback.view_question_formulier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='opportunity_question']" position="inside">
                <group attrs="{'invisible': [('customer_type', '!=', 'formulier_three')]}">
                    <div class="row text-center text-primary h2-width">
                        <h2><u>Design questions</u></h2>
                    </div>
                    <group name="roof_surface" string="How many roof surfaces">
                        <field name="roof_surface" nolabel="1"/>
                    </group>
                    <div class="row text-center text-primary h2-width">
                        <h2><u>Home</u></h2>
                    </div>
                    <group name="is_permit_required" string="Is a permit required">
                        <field name="is_permit_required" nolabel="1"/>
                    </group>
                    <group name="construction_year" string="Year of construction of the house">
                        <field name="construction_year" nolabel="1"/>
                    </group>
                    <group name="any_roof_problem" string="Have you ever had any leaks or other problems with your roof?">
                        <field name="any_roof_problem" nolabel="1"/>
                    </group>
                    <group name="is_buy_rent_property" string="Is it a rent or buy property?">
                        <field name="is_buy_rent_property" nolabel="1"/>
                    </group>
                    <div class="row text-center text-primary h2-width">
                        <h2><u>Connecting the inverter</u></h2>
                    </div>
                    <group name="string_1" string="String 1 (Note: always 6 panels or more in 1 string)">
                        <field name="string_1" nolabel="1"/>
                    </group>
                    <group name="string_2" string="String 2 (Note: always 6 panels or more in 1 string)">
                        <field name="string_2" nolabel="1"/>
                    </group>
                    <div class="row text-center text-primary h2-width">
                        <h2><u>Accessibility of the home and the roof</u></h2>
                    </div>
                    <group name="is_free_space_scaffolding" string="Is there a free space for scaffolding?">
                        <field name="is_free_space_scaffolding" nolabel="1"/>
                    </group>
                    <group name="is_provision_required" string="Is a special provision required (telehandler / lift / aerial platform)">
                        <field name="is_provision_required" nolabel="1"/>
                    </group>
                    <group name="condition_scaffolding_place" string="What is the condition of the surface on which the scaffolding is placed?">
                        <field name="condition_scaffolding_place" nolabel="1"/>
                    </group>
                    <group name="accessibility_rear" string="What is the accessibility of the rear">
                        <field name="accessibility_rear" nolabel="1"/>
                    </group>
                    <group name="use_public_road" string="Use must be made of the public road for the erection of scaffolding or facilities">
                        <field name="use_public_road" nolabel="1"/>
                    </group>
                    <group name="access_roof_neighbors" string="Access to the roof / territory of the neighbors is required">
                        <field name="access_roof_neighbors" nolabel="1"/>
                    </group>
                    <group name="distance_bus_to_roof" string="Walking distance from bus to roof access">
                        <field name="distance_bus_to_roof" nolabel="1"/>
                    </group>
                    <group name="direct_installation_scaffolding" string="Is there an extension / obstacle present that hinders the direct installation of scaffolding or roof lift?">
                        <field name="direct_installation_scaffolding" nolabel="1"/>
                    </group>
                    <div class="row text-center text-primary h2-width">
                        <h2><u>Roof</u></h2>
                    </div>
                    <group name="dak_type_of_roof" string="What type (s) of roof is it?">
                        <field name="dak_type_of_roof" nolabel="1"/>
                    </group>
                    <group name="condition_of_roof" string="What is the condition of the roof?">
                        <field name="condition_of_roof" nolabel="1"/>
                    </group>
                    <group name="asbestos_incorporated_roof" string="Is asbestos incorporated in the roof? And is the customer aware of the consequences?">
                        <field name="asbestos_incorporated_roof" nolabel="1"/>
                    </group>
                    <group name="height_of_gutter" string="What is the height of the gutter?">
                        <field name="height_of_gutter" nolabel="1"/>
                    </group>
                    <div class="row text-center text-primary h2-width">
                        <h2><u>Slanted roof</u></h2>
                    </div>
                    <group name="slope" string="What is the slope?">
                        <field name="slope" nolabel="1"/>
                    </group>
                    <group name="schuin_type_of_roof" string="What type (s) of roofing is it?">
                        <field name="schuin_type_of_roof" nolabel="1"/>
                    </group>
                    <group name="are_pans_screwed_or_hooked" string="Are the pans screwed or hooked?">
                        <field name="are_pans_screwed_or_hooked" nolabel="1"/>
                    </group>
                    <div class="row text-center text-primary h2-width">
                        <h2><u>Flat roof</u></h2>
                    </div>
                    <group name="gravel_on_roof" string="Is there gravel on the roof?">
                        <field name="gravel_on_roof" nolabel="1"/>
                    </group>
                    <group name="plat_type_roof" string="What type (s) of roofing is it?">
                        <field name="plat_type_roof" nolabel="1"/>
                    </group>
                    <group name="roof_terminal_cabling" string="Is there a roof terminal for the string cabling">
                        <field name="roof_terminal_cabling" nolabel="1"/>
                    </group>
                    <div class="row text-center text-primary h2-width">
                        <h2><u>Fuse box</u></h2>
                    </div>
                    <group name="main_switch" string="Is there a main switch?">
                        <field name="main_switch" nolabel="1"/>
                    </group>
                    <group name="is_space_install_earth_leakage" string="Is there a free space to install the earth leakage circuit breaker?">
                        <field name="is_space_install_earth_leakage" nolabel="1"/>
                    </group>
                    <div class="row text-center text-primary h2-width">
                        <h2><u>Inverter</u></h2>
                    </div>
                    <group name="location_of_inverter" string="Location of the inverter">
                        <field name="location_of_inverter" nolabel="1"/>
                    </group>
                    <group name="is_space_inverter_cooling" string="Is there sufficient free space around the inverter for cooling / ventilation purposes?">
                        <field name="is_space_inverter_cooling" nolabel="1"/>
                    </group>
                    <group name="is_sturdy_rear_wall" string="Is a sturdy rear wall available?">
                        <field name="is_sturdy_rear_wall" nolabel="1"/>
                    </group>
                    <group name="washing_machine_use" string="Can a washing machine connection be used?">
                        <field name="washing_machine_use" nolabel="1"/>
                    </group>
                    <div class="row text-center text-primary h2-width">
                        <h2><u>Cabling</u></h2>
                    </div>
                    <group name="empty_pipe_use" string="Can an empty pipe be used?">
                        <field name="empty_pipe_use" nolabel="1"/>
                    </group>
                    <group name="description_inverter" string="Description cable route panels -> inverter">
                        <field name="description_inverter" nolabel="1"/>
                    </group>
                    <group name="description_cable_inverter" string="Description cable inverter -> meter box">
                        <field name="description_cable_inverter" nolabel="1"/>
                    </group>
                    <group name="description_utp_cable" string="Description UTP cable converter -> meter box">
                        <field name="description_utp_cable" nolabel="1"/>
                    </group>
                    <group name="want_mount_cable_himself" string="Does the customer want to mount a cable himself?">
                        <field name="want_mount_cable_himself" nolabel="1"/>
                    </group>
                    <group name="diameter_of_cable" string="When using an existing cable what is the diameter of the cable?">
                        <field name="diameter_of_cable" nolabel="1"/>
                    </group>
                    <group name="internet_connection_wired" string="The internet connection can be wired">
                        <field name="internet_connection_wired" nolabel="1"/>
                    </group>
                    <div class="row text-center text-primary h2-width">
                        <h2><u>Others</u></h2>
                    </div>
                    <group name="is_entrepreneurship" string="Is there any entrepreneurship?">
                        <field name="is_entrepreneurship" nolabel="1"/>
                    </group>
                    <group name="name_on_bill" string="Does the name (incl. Initials) on the energy bill / contract match the name on the quote?">
                        <field name="name_on_bill" nolabel="1"/>
                    </group>
                    <group name="vat_exemption_rules" string="Do you fall under VAT exemption rules?">
                        <field name="vat_exemption_rules" nolabel="1"/>
                    </group>
                    <group name="preservation_product" string="Do you need other preservation products?">
                        <field name="preservation_product" nolabel="1"/>
                    </group>
                    <group name="agreements_with_client" string="Other special agreements with client">
                        <field name="agreements_with_client" nolabel="1"/>
                    </group>
                    <group name="note" string="Note">
                        <field name="note" nolabel="1"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//page[@name='opportunity_image']" position="inside">
                <group attrs="{'invisible': [('customer_type', '!=', 'formulier_three')]}">
                    <group>
                        <field name="house_three" widget="image" class="custom-image-size"/>
                        <field name="access_three" widget="image" class="custom-image-size"/>
                        <field name="parking_spot_three" widget="image" class="custom-image-size"/>
                        <field name="obstacles_three" widget="image" class="custom-image-size"/>
                        <field name="scaffolding_site" widget="image" class="custom-image-size"/>
                        <field name="roof1_three" widget="image" class="custom-image-size"/>
                        <field name="roof_2" widget="image" class="custom-image-size"/>
                        <field name="roof_3" widget="image" class="custom-image-size"/>
                    </group>
                    <group>
